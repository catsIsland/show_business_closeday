<section class="signup">
  <div class="authentication_container">
    <div class="signup-content">
      <div class="signup-form">
          <h2 class="form-title">ログイン</h2>
          <%= form_with scope: :session, url: login_path do |f| %>
            <div class="form-group">
              <%= f.label :name, 'name' do %>
                <i class="zmdi zmdi-account material-icons-name"></i>
              <% end %>
              <%= f.text_field :name, class: '', placeholder: '名前' %>
            </div>
            <div class="form-group">
              <%= f.label :password, 'password' do %>
                <i class="zmdi zmdi-email"></i>
              <% end %>
              <%= f.password_field :password, class: '', placeholder: 'パスワード' %>
            </div>
            <div class="form-group form-button">
              <%= f.submit 'ログイン', class: 'form-submit' %>
            </div>
          <% end %>
        </div>
      <div class="signup-image">
        <figure>
          <img src="<%= asset_path('signup-image.jpg') %>" alt="sing up image">
        </figure>
        <%= link_to 'アカウント登録ページへ', new_user_path, class: 'signup-image-link' %>
      </div>
    </div>
  </div>
</section>

