<section class="signup">
  <div class="container">
    <div class="signup-content">
      <div class="signup-form">
          <h2 class="form-title">アカウント登録</h2>
          <%= form_with model: user do |f| %>
            <div class="form-group">
              <%= f.label :name, 'name' do %>
                <i class="zmdi zmdi-account material-icons-name"></i>
              <% end %>
              <%= f.text_field :name, class: 'form-control', placeholder: '名前' %>
            </div>
            <div class="form-group">
              <%= f.label :mail, 'mail' do %>
                <i class="zmdi zmdi-email"></i>
              <% end %>
              <%= f.text_field :mail, class: 'form-control', placeholder: 'メールアドレス' %>
            </div>
            <div class="form-group">
              <%= f.label :password, 'password' do %>
                <i class="zmdi zmdi-email"></i>
              <% end %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, 'password' do %>
                <i class="zmdi zmdi-email"></i>
              <% end %>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード（確認）' %>
            </div>
            <div class="form-group form-button">
              <%= f.submit '登録', class: 'form-submit' %>
            </div>
          <% end %>
        </div>
      <div class="signup-image">
        <figure>
          <img src="<%= asset_path('signup-image.jpg') %>" alt="sing up image">
        </figure>
        <%= link_to 'ログインページへ', home_path, class: 'signup-image-link' %>
      </div>
    </div>
  </div>
</section>

