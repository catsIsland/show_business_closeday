<div class="card">
  <div class="card-header">
    定休日以外設定
  </div>
  <div class="card-body">
    <div class="wrapper">
      <div class="this_month">
        <!-- xxxx年xx月を表示 -->
        <h1 id="header"></h1>
        <!-- カレンダー -->
        <div id="calendar"></div>
      </div>
      <div class="next_month">
        <!-- xxxx年xx月を表示 -->
        <h1 id="header"></h1>
        <!-- カレンダー -->
        <div id="calendar"></div>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-12 text-center">
        <button type="button" class="btn btn-primary weekly_close_days">保存</button>
      </div>
    </div>
  </div>
</div>